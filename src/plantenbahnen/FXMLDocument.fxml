<?import javafx.scene.text.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane fx:id="anchorPane" prefHeight="700.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="plantenbahnen.Controller">
   <children>
      <Pane fx:id="paneDraw" prefHeight="700.0" prefWidth="700.0" />
      <Pane fx:id="paneControls" layoutX="700.0" prefHeight="700.0" prefWidth="200.0">
         <children>
            <Button fx:id="buttonStartSimulation" layoutX="30.0" layoutY="21.0" mnemonicParsing="false" onAction="#buttonStartSimulation" prefHeight="25.0" prefWidth="140.0" text="Start" />
            <Button fx:id="buttonStopSimulation" layoutX="30.0" layoutY="59.0" mnemonicParsing="false" onAction="#buttonStopSimulation" prefHeight="25.0" prefWidth="140.0" text="Pause" />

            <Label alignment="CENTER" layoutX="1.0" layoutY="102.0" prefHeight="15.0" prefWidth="200.0" text="Szenario auswählen" />
            <ChoiceBox fx:id="choiceBox_scenario" layoutX="26.0" layoutY="126.0" prefWidth="150.0" />

            <Label alignment="CENTER" layoutX="1.0" layoutY="192.0" prefHeight="15.0" prefWidth="200.0" text="Sim.-Geschwindigkeit" />
            <Slider fx:id="slider_sim_speed" layoutX="30.0" layoutY="213.0" prefHeight="15.0" prefWidth="147.0" />

            <CheckBox fx:id="checkBox_drawTail" layoutX="30.0" layoutY="264.0" mnemonicParsing="false" onAction="#checkBox_drawTail" text="Zeichne Trajektorie" />
            <Label layoutX="30.0" layoutY="291.0" prefHeight="15.0" prefWidth="140.0" text="Trajektorienlänge:" />
            <Slider fx:id="slider_tailLength" layoutX="30.0" layoutY="314.0" prefHeight="15.0" prefWidth="147.0" />
         </children>
      </Pane>
      <Separator layoutX="700.0" orientation="VERTICAL" prefHeight="700.0" />
   </children>
</AnchorPane>
